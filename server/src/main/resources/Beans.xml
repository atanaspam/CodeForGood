<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/codeforgood" />
		<property name="username" value="bitnami" />
		<property name="password" value="cfglondon!" />
	</bean>

	<!-- Definition for userService bean -->
	<bean id="userService" class="uk.ac.glasgow.jpmcfg2014.server.services.UserService">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- Definition for conversationService bean -->
	<bean id="conversationService" class="uk.ac.glasgow.jpmcfg2014.server.services.ConversationService">
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>
